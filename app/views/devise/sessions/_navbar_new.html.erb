<div class="container-fluid">
  <%= simple_form_for(resource, url: session_path(resource), html: { class: 'form-inline navigation-form', id: 'login' }) do |f| %>
    <div class="row">
      <div class="col-md-4"><%= f.input :email, label: false, placeholder: I18n.t('.email') %></div>
      <div class="col-md-4"><%= f.input :password, label: false, placeholder: I18n.t('.password') %></div>
      <div class="col-md-4"><%= f.submit t('.sign_in'), class: 'btn btn-primary' %></div>
    </div>
    <div class="row">
      <div class="col-md-4"> <%= f.input :remember_me, label: t('.remember_me'), as: :boolean, required: false %></div>
      <div class="col-md-4"> <%= link_to t('.forgot_your_password', default: 'Forgot your password?'), new_password_path(resource) %></div>
    </div>
  <% end %>
